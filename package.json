{
    "name": "harmony-ts",
    "version": "0.0.1",
    "description": "",
    "main": "src/index.ts",
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^25.1.4",
        "@typescript-eslint/eslint-plugin": "^2.24.0",
        "@typescript-eslint/parser": "^2.24.0",
        "eslint": "^6.8.0",
        "jest": "^25.1.0",
        "ts-jest": "^25.2.1",
        "typescript": "^3.8.3",
        "webpack": "^4.42.0",
        "webpack-cli": "^3.3.11"
    },
    "scripts": {
        "clean": "rm -rf build dist",
        "tsc": "./node_modules/.bin/tsc",
        "webpack": "webpack",
        "build": "npm run clean && npm run tsc && npm run webpack",
        "serve": "npx serve",
        "test": "jest",
        "lint": "eslint --fix src/**.ts"
    },
    "author": "Jack Meyer",
    "license": "None",
    "eslintConfig": {
        "env": {
            "es6": true,
            "jest": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/eslint-recommended",
            "plugin:@typescript-eslint/recommended"
        ],
        "globals": {
            "Atomics": "readonly",
            "SharedArrayBuffer": "readonly"
        },
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "indent": [
                "error",
                4
            ],
            "linebreak-style": [
                "error",
                "unix"
            ],
            "quotes": [
                "error",
                "single"
            ],
            "semi": [
                "error",
                "always"
            ],
            "@typescript-eslint/no-namespace": "off",
            "no-inner-declarations": "off"
        }
    }
}
